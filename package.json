{
    "name": "home-assistant-device-sdk",
    "version": "0.6.8",
    "license": "MIT",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/akwakwak6/home-assistant-device-sdk.git"
    },
    "files": [
        "dist"
    ],
    "description": "SDK for Home Assistant. It reads your devices and generates HA TypeScript class to easily control devices and build automations",
    "scripts": {
        "build": "tsup",
        "test": "vitest run",
        "buildHaWhitMock": "TSUP_ENV=mock tsup && node local/dist/buildHaCli.mock.js",
        "testWithHaServer": "TSUP_ENV=testHaServer tsup && node local/dist/main.js",
        "prepack": "npm run build"
    },
    "keywords": [
        "home-assistant",
        "homeassistant",
        "automation",
        "automations",
        "smart-home",
        "smarthome",
        "iot",
        "home-automation",
        "entities",
        "devices",
        "sdk",
        "toolkit",
        "typescript",
        "codegen",
        "code-generation",
        "scripting"
    ],
    "author": "Akwa",
    "type": "module",
    "devDependencies": {
        "@types/node": "^24.3.0",
        "tsup": "^8.5.0",
        "typescript": "5.9.2",
        "vitest": "^3.2.4"
    },
    "dependencies": {
        "commander": "^14.0.0"
    },
    "bin": {
        "hasdk": "dist/scripts/buildHaCli.js"
    }
}